# Epic Beaker
EPIC_SERVER=epic.hospital.local
EPIC_DB=LAB_RESULTS
EPIC_USER=lab_automation
EPIC_PASS=your_password_here

# Qmatic
QMATIC_URL=http://qmatic.hospital.local/api/v1
